{
    "name": "api-boilerplate",
    "version": "1.0.0",
    "description": "",
    "main": "src/index.ts",
    "scripts": {
        "test": "cross-env NODE_ENV=test mocha --require babel-core/register -r ./src/tests/setup.js \"./src/**/*.spec.js*\" --timeout 10000 --exit",
        "dev": "cross-env NODE_ENV=development nodemon --exec babel-node src/index.js",
        "build": "cross-env npx babel src -d build",
        "start": "cross-env yarn build && cross-env NODE_ENV=production node build/index.js",
        "docker-dev": "docker-compose up --remove-orphans",
        "postinstall": "yarn clean && yarn prettier && yarn lint",
        "prettier": "npx prettier --write '**/*.js'",
        "clean": "node clean.js",
        "lint": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
        "lint-fix": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" --fix ."
    },
